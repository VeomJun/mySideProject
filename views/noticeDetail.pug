extends layout/main

block here
    .notice__big
        .notice__main
            .notice__title
                 h2=notice.title
            .notice__detail
                img(src=notice.fileUrlOne)
                img(src=notice.fileUrlTwo)
                img(src=notice.fileUrlThree)
                img(src=notice.fileUrlFour)
                img(src=notice.fileUrlFive)
                img(src=notice.fileUrlSix)
                img(src=notice.fileUrlSeven)
                img(src=notice.fileUrlEight)
                img(src=notice.fileUrlNine)
                img(src=notice.fileUrlTen)
                img(src=notice.fileUrlEleven)
                img(src=notice.fileUrlTwelve)
                img(src=notice.fileUrlThirteen)
                img(src=notice.fileUrlFourteen)
                img(src=notice.fileUrlFifteen)
            .notice__info
                if loggedUser && notice.creator.id === loggedUser.id
                    a(href=routes.editNotice(notice.id)) 
                        button Edit Notice
                h5.notice__views #{notice.views} views
                h1.notice__description=notice.description
            .notice__comments
                if notice.comments.length === 1 
                    span.notice-number 
                        span#jsNumber 1 
                        |  comment
                else 
                    span.notice__comments-number 
                        span#jsNumber #{notice.comments.length} 
                        |  comments  
                form.notice-form#jsComment
                    input.notice-input(type="text", placeholder="Leave a Comment")
                ul.notice__comments.allRound-comments#jsList
                    each content in notice.comments.reverse()
                        li
                            if loggedUser && (String(content.creator) === loggedUser.id)
                                h1.jsText=content.text
                                    button.jsRemoveBtn(id=String(content.id)) ❌
                            else
                                h1=content.text
    .remote__case
        .remote
            .remote__title
                h1 REMOTE
                i.far.fa-times-circle
            .remote__body
                h1=notice.title
                .remote__btns
                    if wow === 0 && length >= 2
                        a(href=newNotice[wow+1].id)
                            i.fas.fa-angle-right
                    else if wow === 0 && length === 1
                    else if 1 <= wow, wow + 1 !== length
                        a(href=newNotice[wow-1].id)
                            i.fas.fa-angle-left
                        a(href=newNotice[wow+1].id)
                            i.fas.fa-angle-right
                    else
                        a(href=newNotice[wow-1].id)
                            i.fas.fa-angle-left