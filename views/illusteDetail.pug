    .illuste__big
        .illuste__main
            .illuste__title
                h2=illuste.title
            .illuste__detail
                img(src=illuste.fileUrlOne)
                img(src=illuste.fileUrlTwo)
                img(src=illuste.fileUrlThree)
                img(src=illuste.fileUrlFour)
                img(src=illuste.fileUrlFive)
                img(src=illuste.fileUrlSix)
                img(src=illuste.fileUrlSeven)
                img(src=illuste.fileUrlEight)
                img(src=illuste.fileUrlNine)
                img(src=illuste.fileUrlTen)
                img(src=illuste.fileUrlEleven)
                img(src=illuste.fileUrlTwelve)
                img(src=illuste.fileUrlThirteen)
                img(src=illuste.fileUrlFourteen)
                img(src=illuste.fileUrlFifteen)
            .illuste__info
                if loggedUser && illuste.creator.id === loggedUser.id
                    a(href=routes.editIlluste(illuste.id)) 
                        button Edit Illuste
                h5.illuste__views #{illuste.views} views
                //.illuste__author
                    | Uploaded by 
                    a(href=routes.userDetail(comics.creator.id))=comics.creator.name
                    a(href="#")=illuste.creator.name
            .illuste__comments
                if illuste.comments.length === 1 
                    span.illuste__comments-number 
                        span#jsNumber 1 
                        |  comment
                else 
                    span.illuste__comments-number 
                        span#jsNumber #{illuste.comments.length} 
                        |  comments   
                form.illuste__form#jsComment
                    input.illuste-input(type="text", placeholder="Leave a Comment")
                ul.illuste__comments.allRound-comments#jsList
                    each content in illuste.comments.reverse()
                        li
                            if loggedUser && (String(content.creator) === loggedUser.id)
                                h1.jsText=content.text
                                    button.jsRemoveBtn(id=String(content.id)) ❌
                            else
                                h1=content.text
    .remote__case
        .remote
            .remote__title
                h1 REMOTE
                i.far.fa-times-circle
            .remote__body
                h1=illuste.title
                .remote__btns
                    if wow === 0 && length >= 2
                        a(href=newIlluste[wow+1].id)
                            i.fas.fa-angle-right
                    else if wow === 0 && length === 1
                    else if 1 <= wow, wow + 1 !== length
                        a(href=newIlluste[wow-1].id)
                            i.fas.fa-angle-left
                        a(href=newIlluste[wow+1].id)
                            i.fas.fa-angle-right
                    else
                        a(href=newIlluste[wow-1].id)
                            i.fas.fa-angle-left